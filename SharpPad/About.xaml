<Window x:Class="SharpPad.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About #Pad" Height="231" Width="208">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="181" Margin="10,10,0,0" VerticalAlignment="Top" Width="180">
            <Label x:Name="appName" HorizontalAlignment="Center" Content="#Pad"/>
            <Label x:Name="appCreator" HorizontalAlignment="Center" Content="Created By: Daniel Reyes"/>
            <Label x:Name="appCopywrite" HorizontalAlignment="Center" Content="Built with C#.Net 4.5"/>
            <Label x:Name="appVersion" HorizontalAlignment="Center" Content="Version 1.0"/>
            
        </StackPanel>
    </Grid>
</Window>
